<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/nice_white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard"
        android:padding="10dp"
        android:textSize="25sp"
        android:gravity="center"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:background="@color/night_blue"
        android:textColor="@color/nice_white"/>

<LinearLayout
    android:layout_marginTop="50dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Admin.AdminDashboard"
    android:background="@color/nice_white"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="100px">

        <LinearLayout
            android:id="@+id/menu_see_drivers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/night_blue"
            android:layout_marginRight="90px">

            <ImageView
                android:id="@+id/icon_see_drivers"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:src="@drawable/seedriver" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_see_drivers"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="See Drivers"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_authority_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/night_blue">

            <ImageView
                android:id="@+id/icon_authority_report"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:src="@drawable/authreports" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_authority_report"
                android:gravity="center"
                android:text="Authority Report"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/menu_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/night_blue"
            android:layout_marginRight="90px">

            <ImageView
                android:id="@+id/icon_support"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:src="@drawable/support" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_support"
                android:gravity="center"
                android:text="Support"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/night_blue">

            <ImageView
                android:id="@+id/icon_settings"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:src="@drawable/settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_settings"
                android:gravity="center"
                android:text="Settings"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

</LinearLayout>