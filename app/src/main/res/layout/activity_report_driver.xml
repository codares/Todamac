<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    tools:context=".Customer.ReportDriver">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ReportList Driver header -->
        <TextView
            android:id="@+id/report_driver_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/night_blue"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="20px"
            android:text="Report Driver"
            android:textColor="@color/nice_white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- Driver's Information sub-header -->
        <TextView
            android:id="@+id/driver_info_subheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Driver's Information"
            android:textColor="@color/night_blue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10pt">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/driver_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Driver's Name:      "
                    android:textColor="@color/night_blue"
                    android:textSize="16sp" />
                <!-- Driver's Name input -->
                <EditText
                    android:id="@+id/driver_name_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="                             "
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Date:                       "
                    android:textColor="@color/night_blue"
                    android:textSize="16sp" />

                <!-- Date input -->
                <EditText
                    android:id="@+id/date_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="                             "
                    android:inputType="text" />
            </LinearLayout>
            <!-- Plate Number input -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/plate_number_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Plate Number:      "
                    android:textColor="@color/night_blue"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/plate_number_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="                             "
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="10pt">

                <TextView
                    android:id="@+id/infractions_label_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Infraction(s):"
                    android:textColor="@color/night_blue"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/profanity_radio_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Profanity"
                        android:textColor="@color/night_blue" />

                    <RadioButton
                        android:id="@+id/fare_evasion_radio_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fare Evasion"
                        android:textColor="@color/night_blue" />

                    <RadioButton
                        android:id="@+id/over_speeding_radio_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Over Speeding"
                        android:textColor="@color/night_blue" />

                    <RadioButton
                        android:id="@+id/unacceptable_language_gesture_radio_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Unacceptable Language/Gesture"
                        android:textColor="@color/night_blue" />

                    <RadioButton
                        android:id="@+id/other_radio_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        android:textColor="@color/night_blue" />

                </RadioGroup>

                <EditText
                    android:id="@+id/otherReasonEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_border"
                    android:hint="Please specify..\n "
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/upload_media_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Media"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="20pt">
                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"/>

                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10pt"
                    android:text="Submit"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
