<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@color/nice_white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5pt"
        android:background="@drawable/white_gradient_blue_border">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue"
            android:padding="16dp">

            <TextView
                android:id="@+id/reporter_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Reporter Id: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reporter_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/reporter_id_label"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingBottom="8dp"
                android:text="Name"
                android:textFontWeight="600"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/driver_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reporter_id_label"
                android:layout_alignParentLeft="true"
                android:text="Driver Name: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/driver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/driver_name_label"
                android:layout_toRightOf="@+id/driver_name_label"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingBottom="8dp"
                android:textFontWeight="600"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/report_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/driver_name_label"
                android:layout_alignParentLeft="true"
                android:text="Date: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/report_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/report_date_label"
                android:layout_toRightOf="@+id/report_date_label"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingBottom="8dp"
                android:textFontWeight="600"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/report_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_date_label"
                android:layout_alignParentLeft="true"
                android:text="Type of Report: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/report_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/report_type_label"
                android:layout_toRightOf="@+id/report_type_label"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingBottom="8dp"
                android:textFontWeight="600"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/report_plate_number_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/report_type_label"
                android:layout_alignParentLeft="true"
                android:text="Plate Number: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/report_plate_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/report_plate_number_label"
                android:layout_toRightOf="@id/report_plate_number_label"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingBottom="8dp"
                android:textFontWeight="600"
                android:textSize="14sp" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_below="@id/report_plate_number"
                android:foregroundGravity="center"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/report_image"
                android:layout_width="match_parent"
                android:layout_below="@id/progressBar"
                android:layout_height="600dp"
                android:layout_centerInParent="true"
                android:foregroundGravity="center"
                android:scaleType="centerCrop"/>

            <VideoView
                android:layout_marginTop="40pt"
                android:id="@+id/report_video"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_height="600dp" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>